<% for(var i=0; i<lists.length; i++){%>
<tr>
    <td><%= i+1%></td>
    <td><%= lists[i].title%></td>
    <td><%= lists[i].description%></td>
    <td><%= lists[i].time%></td>
    <td>
        <a href="/update_todo?id=<%=lists[i]._id%>" class="btn border-shadow update"><span class="text-gradient"><i class="fas fa-pencil-alt"></i></span></a>
        <a href="#" class="btn border-shadow delete"><span class="text-gradient"><i class="fas fa-times"></i></span></a>
    </td>
</tr>
<%}%>